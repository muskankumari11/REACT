//in react
//inside src 
//app.js

function App() {
  return (
    <h1>hello from my side</h1>
      );
}

export default App;

//index.js
import React from 'react';
import ReactDOM from 'react-dom/client';
import App from './App';


const root = ReactDOM.createRoot(document.getElementById('root'));
root.render(
  <React.StrictMode>
    <App />
  </React.StrictMode>
);

